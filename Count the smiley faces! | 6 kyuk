#https://www.codewars.com/kata/583203e6eb35d7980400002a/train/python
def count_smileys(arr):
    k = 0
    face = ''
    eyes = [':', ';']
    nose = ['', '-', '~']
    smile = [')', 'D']
    for i in arr:
        for a in eyes:
            for b in nose:
                for c in smile:
                    face = a + b + c
                    if i == face:
                        k += 1
    return k
